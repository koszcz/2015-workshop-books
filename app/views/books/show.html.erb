<h1><%= @book.title %></h1>
<div><%= image_tag @book.photo.url, class:"book_avatar" %></div>

<p>Author: <%= raw @book.author %></p>
<p>Description: <%= @book.description %></p>

<% if @book.is_liked_by? current_user %>
  <%= unlike_for_book(@book, current_user) %>
<% else %>
  <%= like_for_book(@book) %> 
<% end %>

<p><%= link_to "Back to list", books_path %></p>
<p><%= link_to "Edit", edit_book_path(@book) %></p>
<p><%= link_to "Delete", @book, method: :delete, data: { confirm: 'Are you sure?' } %></p>

<h2>Comments</h2>

<%= render partial: 'comment', collection: @book.comments %>

<%= render 'new_comment' %>
